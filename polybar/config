;label-connected-background = ${colors.background-alt}
;label-connected-padding-right = 2

[module/date]
type = internal/date
interval = 1
;format-background = ${colors.background-alt}
;format-padding = 2

date= " %Y-%m-%d"

time = %H:%M:%S

